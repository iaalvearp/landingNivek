---
import BtnAccent from "./BtnAccent.astro";
import Btn from "./Btn.astro";
---

<header id="home" class="h-full w-full grid justify-items-center">
    <div class="h-16 w-full"></div>
    <main class="w-[90%] md:w-4/5 h-full mx-auto z-10 grid gap-5 place-content-center">
        <h1 class=" text-5xl md:text-7xl text-[var(--dark-text)] font-bold text-center z-10 mb-10 md:mb-5">
            Registra tu  
            <span class="text-[var(--dark-accent)]">
                Marca 
            </span>
            con nuestro equipo.
        </h1>
        <p class="max-w-96 text-[var(--dark-text)] text-center md:text-lg mx-auto mb-7">
            Protege tu marca con <span class="text-[var(--dark-accent)] font-bold">Nivek Studio</span> y asegura el futuro de tu negocio. 
        </p>
        <div id="btnContainer" class="grid gap-4 justify-center">
            <BtnAccent
            href="#">
                Ver más
            </BtnAccent>
            <Btn
            href="#">
                Contáctanos
            </Btn>
        </div>
    </main>
    <video class="absolute h-full w-full object-cover" src="/hero-nivek.mp4" autoplay loop muted></video>
    <span class="h-full w-full absolute bg-[--dark-blur-background]"></span>
</header>

<style>
    header {
        grid-auto-rows: min-content;
    }
    main{
        height: calc(100vh - 4rem);
    }
    p{
        text-wrap: pretty;
    }
    #btnContainer{
        grid-auto-columns: auto;
        grid-template-columns: repeat(auto-fit, minmax(min-content, 10rem));
    }
    
</style>