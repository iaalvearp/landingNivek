---
const {href} = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer">
    <slot>
</a>

<style>
    a{
        position: absolute;
        padding: 0.5rem 1rem;
        background: var(--dark-blur-background);
        backdrop-filter: blur(4px);
        inset: 0;
        top: 10rem;
        margin: auto;
        border-radius: 0.125rem;
        color: var(--dark-accent);
        font-size: 1.125rem;
        line-height: 1.75rem;
        transform: translate(0,0) scale(1);
        border: 1px solid var(--dark-accent);
        box-shadow: 0px 0px 0px var(--dark-hover);
        transition-duration: 300ms;
        height: max-content;
        width: max-content;
    }
    a:hover{
        background: var(--dark-accent);
        transform: translate(0.5rem, -0.5rem);
        color: var(--dark-background);
        box-shadow: -3px 3px 0px var(--dark-hover);
    }
    a:active{
        transform: scale(0.9);
        box-shadow: -1px 1px 0px var(--dark-hover);
    }
</style>